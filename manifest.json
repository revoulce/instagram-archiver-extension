{
  "manifest_version": 3,
  "name": "Insta Archiver",
  "version": "1.1.1",
  "description": "Send Instagram posts and stories to your archive server.",
  "permissions": [
    "storage",
    "activeTab"
  ],
  "host_permissions": [
    "https://*.instagram.com/*",
    "http://*/*",
    "https://*/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": "assets/icon.png"
  },
  "background": {
    "service_worker": "src/background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://*.instagram.com/*"],
      "js": ["src/content.js"],
      "css": ["assets/content.css"],
      "run_at": "document_end"
    }
  ],
  "icons": {
    "128": "assets/icon.png"
  }
}